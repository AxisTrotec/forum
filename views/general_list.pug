extends layout

block content
  div(class='content')
    h1= title

    li
      a(href='/catalog/general/create' class='button') Create post

    ul(class='list')
      each comment in comments_list
        li 
          h3(class='username') #{comment.username}
            h6(class='msg') #{comment.message}
      else
        li There are no messages.
